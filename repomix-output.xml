              <p className="text-sm uppercase tracking-widest text-[#00A9E0] font-semibold">Leadership</p>
            </motion.div>
            <h2 className="text-4xl md:text-5xl font-heading font-bold text-[#1e3a4f] mb-4 leading-tight">
