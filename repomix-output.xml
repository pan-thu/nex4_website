          className="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-[#00C4FF]/5 to-transparent rounded-full blur-3xl"
          animate={{ scale: [1.1, 1, 1.1] }}
          transition={{ duration: 10, repeat: Infinity, ease: 'easeInOut' }}
